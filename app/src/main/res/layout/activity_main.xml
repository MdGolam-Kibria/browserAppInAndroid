<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gk.brawapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="12dp">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="7dp"
            android:background="#DEDEDE"
            android:src="@drawable/home" />

        <EditText
            android:id="@+id/forsearch"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:height="40dp"
            android:background="@drawable/forlofo"
            android:hint="@string/forSerch"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnCLik"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/forsbtn"
            android:text="@string/forbtn"
            android:textAlignment="center"
            android:textSize="9dp" />

        <ImageButton
            android:id="@+id/forAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:src="@drawable/man" />
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:background="#7F7F7F"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="center"
        tools:ignore="WebViewLayout">

        <WebView
            android:id="@+id/forWeb"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
